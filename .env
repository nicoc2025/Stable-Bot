# Orca LP Range Manager Configuration
# Copy this to .env and fill in your values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Solana wallet keypair path (JSON file)
WALLET_KEYPAIR_PATH=./test-keypair.json

# Orca Whirlpool address to manage
WHIRLPOOL_ADDRESS=7qbRF6YsyGuLUVs6Y1q64bdVrfe4ZcUUz1JRdoVNUJnm

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Solana cluster: mainnet-beta or devnet
CLUSTER=mainnet-beta

# RPC endpoint (recommended: use a dedicated provider like Helius/QuickNode)
# Default uses public mainnet endpoint if not set
RPC_URL=https://api.mainnet-beta.solana.com

# ===========================================
# STRATEGY PARAMETERS
# ===========================================

# Range width as decimal (e.g., 0.10 = 10% on each side = 20% total range)
RANGE_WIDTH_PERCENT=0.10

# Edge buffer as decimal (e.g., 0.02 = trigger when price is within 2% of edge)
# Set to 0 to disable near-edge triggering (only trigger when out of range)
EDGE_BUFFER_PERCENT=0.02

# How long (seconds) condition must remain true before triggering rebalance
DWELL_SECONDS=10

# Minimum time (seconds) between rebalances (anti-thrashing)
MIN_REBALANCE_INTERVAL_SECONDS=180

# How often (seconds) to poll the Whirlpool for price updates
POLL_INTERVAL_SECONDS=5

# ===========================================
# OPERATIONAL FLAGS
# ===========================================

# Dry run mode: true = simulate only, false = execute transactions
DRY_RUN=true

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# AUTHENTICATION (Optional - set via first-run setup)
# ===========================================

# Override credentials via env vars (optional, first-run setup is default)
# AUTH_USERNAME=
# AUTH_PASSWORD_HASH=
